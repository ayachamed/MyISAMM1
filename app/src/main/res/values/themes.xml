<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
        Base application theme.
        This theme ALREADY has NoActionBar because its parent is Theme.MaterialComponents.DayNight.NoActionBar.
        If an Activity uses this theme, it will not have a default system ActionBar.
        To show an ActionBar in an Activity using this theme, you must add a Toolbar/MaterialToolbar
        to its layout and call setSupportActionBar().
    -->
    <style name="Theme.MyISAMM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--
        If you specifically need a theme for activities like Login/Signup
        that should *definitely* not have an ActionBar and might have other
        subtle differences (e.g., different window background, fullscreen),
        you can still define a variant. But if they just need to be NoActionBar,
        Theme.MyISAMM itself is sufficient.

        Example: If you wanted Login to be fullscreen AND NoActionBar
    -->
    <style name="Theme.MyISAMM.Login" parent="Theme.MyISAMM">
        <!-- Theme.MyISAMM is already NoActionBar -->
        <!-- <item name="android:windowFullscreen">true</item> --> <!-- Uncomment for fullscreen -->
        <!-- You could override other attributes specific to Login screen here -->
        <!-- <item name="android:windowBackground">@color/login_background</item> -->
    </style>


    <!-- This ShapeAppearanceOverlay style is fine, leave it as is if used elsewhere -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>